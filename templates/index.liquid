<!-- Top Banner Section -->
<div class="container-fluid bg-secondary text-white py-2">
    <div class="d-flex align-items-center justify-content-center">
        <div class="me-3">
            <b>Tisco Vision</b>
        </div>
        <div class="text-center">
            Find the ideal gift for the real one
        </div>
    </div>
</div>

<!-- Full-Width Image Section -->
<div class="container-fluid p-0">
    <img src="{{ 'Frame 1957.png' | asset_img_url }}" class="img-fluid" alt="Frame 1957" style="width: 100%;">
</div>

<!-- Content Section -->
<div class="container-fluid py-4">
    <div class="row g-4">
        <!-- Text Content -->
        <div class="col-lg-6">
            <div class="text-black p-4 h-100">
                <h1 class="display-4 text-center mb-4"><b>The Gift Guide</b></h1>
                <p class="fs-5 ms-5">Discover joy: Your Ultimate Holiday Gift Destination.</p>
                <p class="fs-5 ms-5">Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>
            </div>
        </div>
        <!-- Image Content -->
        <div class="col-lg-6">
            <img src="{{ 'second.png' | asset_img_url }}" class="img-fluid" alt="Second Image" style="width: 100%;">
        </div>
    </div>
</div>

<!-- Bottom Banner Section -->
<div class="container-fluid bg-secondary text-white py-2">
    <div class="d-flex align-items-center justify-content-center">
        <div class="text-center">
            <b>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZE XXS TO 6XL</b>
        </div>
    </div>
</div>

<!-- Product Section -->
<h2 class="text-center my-4">Tisco Vision in the Wild</h2>
<div class="container-fluid">
    <div class="row">
        {% for product in collections['frontpage'].products %}
        <div class="col-sm-12 col-md-6 col-lg-4 ">
            <div class="card my-3 p-3 rounded">
                <a href="">
                    <img src="{{product.featured_image | image_url }}" alt="{{ product.title }}" class="card-img-top product-image" />
                </a>
                <div class="card-body">
                    <a href="">
                        <h5 class="card-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                            </svg>
                            
                        </h5>
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
